    local description = Create("TextLabel", {
        Name = "Description",
        Parent = topBar,
        BackgroundTransparency = 1,
        Position = UDim2.new(0.103, 0, 0.654, 0),
        Size = UDim2.new(0, 80, 0.3, 0),
        ZIndex = 3,
        Font = Enum.Font.GothamBold,
