-- Proximity Hub [Premium Edition]
-- Created by [Your Name], May 2024

local ProximityHub = {}

-- Library settings
ProximityHub.Settings = {
    ThemeColor = Color3.fromRGB(125, 60, 255),  -- Purple theme
    TextColor = Color3.fromRGB(255, 255, 255),  -- White text
    BackgroundColor = Color3.fromRGB(26, 26, 26) -- Dark background
}

-- Main functions
ProximityHub.Main = {
    Automatically = function()
        -- Automatic functionality implementation
        print("Automatic mode activated")
    end,
    
    ChangeChat = function()
        -- Change chat implementation
        print("Chat changed")
    end,
    
    Webhooks = function()
        -- Webhooks implementation
        print("Webhooks configured")
    end
}

-- Settings functions
ProximityHub.SettingsTab = {
    AutoAttack = function(state)
        -- Auto attack toggle
        print("Auto Attack:", state and "Enabled" or "Disabled")
    end,
    
    Skill = function()
        -- Skill settings
        print("Skill settings opened")
    end,
    
    AutoSkill = function(state)
        -- Auto skill toggle
        print("Auto Skill:", state and "Enabled" or "Disabled")
    end
}

-- Monster Targeting functions
ProximityHub.MonTargets = {
    Farm = function()
        -- Farm implementation
        print("Farming activated")
    end,
    
    AutoFarmAll = function()
        -- Auto farm all implementation
        print("Auto Farm (All) activated")
    end,
    
    AutoFarmTargets = function()
        -- Auto farm targets implementation
        print("Auto Farm (Targets) activated")
    end
}

-- UI Creation function
function ProximityHub:CreateUI()
    -- Create ScreenGui
    local ScreenGui = Instance.new("ScreenGui")
    ScreenGui.Name = "ProximityHubUI"
    ScreenGui.Parent = game.Players.LocalPlayer:WaitForChild("PlayerGui")
    
    -- Main Frame
    local MainFrame = Instance.new("Frame")
    MainFrame.Name = "MainFrame"
    MainFrame.Size = UDim2.new(0, 300, 0, 400)
    MainFrame.Position = UDim2.new(0.5, -150, 0.5, -200)
    MainFrame.AnchorPoint = Vector2.new(0.5, 0.5)
    MainFrame.BackgroundColor3 = self.Settings.BackgroundColor
    MainFrame.BorderSizePixel = 0
    MainFrame.Parent = ScreenGui
    
    -- Title Label
    local Title = Instance.new("TextLabel")
    Title.Name = "Title"
    Title.Text = "Proximity Hub [Premium Edition]"
    Title.Size = UDim2.new(1, 0, 0, 40)
    Title.Position = UDim2.new(0, 0, 0, 0)
    Title.BackgroundTransparency = 1
    Title.TextColor3 = Color3.fromRGB(177, 156, 217)  -- Light purple
    Title.Font = Enum.Font.GothamBold
    Title.TextSize = 18
    Title.Parent = MainFrame
    
    -- Tab Buttons
    local function CreateButton(name, text, positionY, callback)
        local button = Instance.new("TextButton")
        button.Name = name
        button.Text = text
        button.Size = UDim2.new(0.9, 0, 0, 35)
        button.Position = UDim2.new(0.05, 0, 0, positionY)
        button.BackgroundColor3 = self.Settings.ThemeColor
        button.TextColor3 = self.Settings.TextColor
        button.Font = Enum.Font.Gotham
        button.TextSize = 14
        button.Parent = MainFrame
        
        if callback then
            button.MouseButton1Click:Connect(callback)
        end
        
        return button
    end
    
    -- Main Tab
    CreateButton("AutomaticallyBtn", "Automatically", 50, self.Main.Automatically)
    CreateButton("ChangeChatBtn", "Change Chat", 90, self.Main.ChangeChat)
    CreateButton("WebhooksBtn", "Webhooks", 130, self.Main.Webhooks)
    
    -- Settings Tab
    CreateButton("AutoAttackBtn", "Auto Attack", 190, function()
        self.SettingsTab.AutoAttack(true)
    end)
    CreateButton("SkillBtn", "Skill", 230, self.SettingsTab.Skill)
    CreateButton("AutoSkillBtn", "Auto Skill", 270, function()
        self.SettingsTab.AutoSkill(true)
    end)
    
    -- Mon Targets Tab
    CreateButton("FarmBtn", "Farm", 330, self.MonTargets.Farm)
    CreateButton("AutoFarmAllBtn", "Auto Farm (All)", 370, self.MonTargets.AutoFarmAll)
    CreateButton("AutoFarmTargetsBtn", "Auto Farm (Targets)", 410, self.MonTargets.AutoFarmTargets)
end

return ProximityHub
