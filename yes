        while toggleFrame.Parent do
            Tween(pulseGlow, {BackgroundTransparency = 0.7}, 1)
            task.wait(1)
            Tween(pulseGlow, {BackgroundTransparency = 0.9}, 1)
            task.wait(1)
        end
    end)()
    
